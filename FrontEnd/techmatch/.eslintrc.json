{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "process": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
      "quotes": [2, "single"],
      "eqeqeq": 2,
      "no-console": 1,
      "no-multiple-empty-lines": [1, { "max": 1 }],
      "indent": [2, 4, {
          "SwitchCase": 1
      }]
    }
}